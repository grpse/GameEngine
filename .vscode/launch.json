    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "linux": {                
                "program": "${workspaceFolder}/build/ParticleSystemTest/GameEngine_ParticleSystemTest",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}/build/",
                "environment": [],
                "externalConsole": true,
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "windows": {
                "program": "${workspaceFolder}/build/ParticleSystemTest/GameEngine_ParticleSystemTest.exe",
                "args": [],
                "stopAtEntry": false,
                "cwd": "${workspaceFolder}/build/ParticleSystemTest/",
                "environment": [],
                "externalConsole": true,
                "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        }
    ]
}